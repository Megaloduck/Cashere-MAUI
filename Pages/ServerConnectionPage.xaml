<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cashere.Pages.ServerConnectionPage"
              Title="Connect to Server">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Connect to CafePOS Server" FontSize="20" FontAttributes="Bold" />

        <Entry x:Name="ServerEntry" Placeholder="Enter Server IP (e.g., 192.168.1.10:7102)" />

        <Button Text="Check Connection" Clicked="OnCheckConnectionClicked" />

        <Label x:Name="StatusLabel" Text="Not connected" TextColor="Gray" FontSize="16" />
    </VerticalStackLayout>
</ContentPage>