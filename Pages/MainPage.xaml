<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Cashere.PageModels"             
             xmlns:models="clr-namespace:Cashere.Models"
             xmlns:services="clr-namespace:Cashere.Services"
             xmlns:converters="clr-namespace:Cashere.Converters"
             x:Class="Cashere.Pages.MainPage"
             x:Name="OverviewPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

  

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,420">

        <!-- Modern Header with Gradient -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                BackgroundColor="{DynamicResource HeaderBackgroundColor}"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="{DynamicResource ShadowColor}" 
                        Offset="0,4" 
                        Radius="10" 
                        Opacity="0.3"/>
            </Border.Shadow>

            <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" 
                  Padding="20,12" 
                  ColumnSpacing="15">

                <!-- Logo & Title -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10">
                    <Frame WidthRequest="45" HeightRequest="45" 
                           CornerRadius="23" Padding="0" 
                           BackgroundColor="{DynamicResource PrimaryColor}"
                           HasShadow="False">
                        <Label Text="☕" FontSize="24" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"/>
                    </Frame>
                    <StackLayout VerticalOptions="Center" Spacing="2">
                        <Label Text="Cashere" 
                               FontSize="22" 
                               FontAttributes="Bold" 
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Label Text="{Binding Today}" 
                               FontSize="12" 
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                    </StackLayout>
                </HorizontalStackLayout>

                <!-- Search Bar (Optional) -->
                <Frame Grid.Column="1" 
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       BorderColor="{DynamicResource BorderColor}"
                       CornerRadius="25" 
                       Padding="15,8" 
                       HasShadow="False"
                       Margin="20,0"
                       MaximumWidthRequest="400">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Label Grid.Column="0" Text="🔍" FontSize="16" 
                               VerticalOptions="Center"/>
                        <Entry Grid.Column="1" 
                               Placeholder="Search menu..." 
                               PlaceholderColor="{DynamicResource TertiaryTextColor}"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               BackgroundColor="Transparent"/>
                    </Grid>
                </Frame>

                <!-- Theme Toggle -->
                <Button Grid.Column="2" 
                        x:Name="ThemeToggleButton"
                        FontSize="20"
                        BackgroundColor="Transparent"
                        TextColor="{DynamicResource PrimaryTextColor}"
                        BorderWidth="1"
                        BorderColor="{DynamicResource BorderColor}"
                        CornerRadius="20"
                        WidthRequest="40"
                        HeightRequest="40"
                        Clicked="OnThemeToggleClicked"/>

                <!-- Admin Panel Button -->
                <Button Grid.Column="3" 
                        Text="⚙️ Admin" 
                        BackgroundColor="{DynamicResource AccentColor}" 
                        TextColor="White"
                        CornerRadius="20"
                        Padding="20,8"
                        FontSize="14"
                        FontAttributes="Bold"
                        Command="{Binding OpenAdminPanelCommand}">
                    <Button.Shadow>
                        <Shadow Brush="{DynamicResource ShadowColor}" 
                                Offset="0,2" 
                                Radius="8" 
                                Opacity="0.3"/>
                    </Button.Shadow>
                </Button>

                <!-- User Profile (Optional) -->
                <Frame Grid.Column="4" 
                       WidthRequest="40" 
                       HeightRequest="40" 
                       CornerRadius="20" 
                       Padding="0" 
                       BackgroundColor="{DynamicResource PrimaryColor}"
                       HasShadow="False">
                    <Label Text="👤" 
                           FontSize="20" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"/>
                </Frame>
            </Grid>
        </Border>

        <!-- Menu Section (Left Side) -->
        <Grid Grid.Row="1" Grid.Column="0" Padding="15" RowDefinitions="Auto,*" RowSpacing="15">

            <!-- Enhanced Category Tabs -->
            <ScrollView Grid.Row="0" Orientation="Horizontal" 
                       HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout Spacing="12" Padding="5">
                    <CollectionView ItemsSource="{Binding Categories}" 
                                    SelectionMode="Single" 
                                    SelectionChangedCommand="{Binding SelectCategoryCommand}"
                                    SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="12"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border StrokeThickness="0"
                                       BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, 
                                                      ConverterParameter='Dynamic:PrimaryColor|Dynamic:CardBackgroundColor'}"
                                       StrokeShape="RoundRectangle 20"
                                       Padding="20,10">
                                    <Border.Shadow>
                                        <Shadow Brush="{DynamicResource ShadowColor}" 
                                                Offset="0,2" 
                                                Radius="8" 
                                                Opacity="0.2"/>
                                    </Border.Shadow>
                                    <Label Text="{Binding Name}" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter},
                                                      ConverterParameter='#FFFFFF|Dynamic:PrimaryTextColor'}"/>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Enhanced Menu Items Grid -->
            <ScrollView Grid.Row="1">
                <CollectionView ItemsSource="{Binding FilteredMenuItems}" 
                              SelectionMode="Single" 
                              SelectionChanged="OnMenuItemSelected"
                              Margin="0,5">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" 
                                        HorizontalItemSpacing="15" 
                                        VerticalItemSpacing="15" 
                                        Span="3"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeThickness="0"
                                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                                   StrokeShape="RoundRectangle 15"
                                   Padding="0">
                                <Border.Shadow>
                                    <Shadow Brush="{DynamicResource ShadowColor}" 
                                            Offset="0,4" 
                                            Radius="12" 
                                            Opacity="0.15"/>
                                </Border.Shadow>

                                <Grid RowDefinitions="180,*" RowSpacing="0">
                                    <!-- Image Placeholder -->
                                    <Border Grid.Row="0" 
                                           BackgroundColor="{DynamicResource PrimaryColor}"
                                           StrokeThickness="0"
                                           StrokeShape="RoundRectangle 15,15,0,0">
                                        <Grid>
                                            <Label Text="☕" 
                                                   FontSize="60" 
                                                   HorizontalOptions="Center" 
                                                   VerticalOptions="Center"
                                                   Opacity="0.3"
                                                   TextColor="White"/>

                                            <!-- Category Badge -->
                                            <Frame CornerRadius="12" 
                                                   BackgroundColor="{DynamicResource BadgeBackgroundColor}" 
                                                   Padding="8,4" 
                                                   HasShadow="False" 
                                                   HorizontalOptions="Start"
                                                   VerticalOptions="Start"
                                                   Margin="12">
                                                <Label Text="{Binding Category}" 
                                                       FontSize="10" 
                                                       FontAttributes="Bold" 
                                                       TextColor="{DynamicResource BadgeTextColor}"/>
                                            </Frame>
                                        </Grid>
                                    </Border>

                                    <!-- Item Details -->
                                    <StackLayout Grid.Row="1" Padding="15" Spacing="8">
                                        <!-- Item Name -->
                                        <Label Text="{Binding Name}" 
                                               FontSize="15" 
                                               FontAttributes="Bold" 
                                               LineBreakMode="TailTruncation"
                                               TextColor="{DynamicResource PrimaryTextColor}"/>

                                        <!-- Item Description -->
                                        <Label Text="{Binding Description}" 
                                               FontSize="12" 
                                               TextColor="{DynamicResource SecondaryTextColor}" 
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"/>

                                        <!-- Price & Add Button -->
                                        <Grid ColumnDefinitions="*,Auto" 
                                              Margin="0,8,0,0"
                                              ColumnSpacing="10">
                                            <Label Grid.Column="0"
                                                   Text="{Binding Price, StringFormat='Rp {0:N0}'}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold" 
                                                   TextColor="{DynamicResource SuccessColor}"
                                                   VerticalOptions="Center"/>

                                            <Button Grid.Column="1"
                                                    Text="+" 
                                                    BackgroundColor="{DynamicResource PrimaryColor}" 
                                                    TextColor="White" 
                                                    CornerRadius="20" 
                                                    WidthRequest="40"
                                                    HeightRequest="40"
                                                    FontSize="20"
                                                    FontAttributes="Bold"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                              Path=BindingContext.AddToCartCommand}"
                                                    CommandParameter="{Binding .}">
                                                <Button.Shadow>
                                                    <Shadow Brush="{DynamicResource ShadowColor}" 
                                                            Offset="0,2" 
                                                            Radius="8" 
                                                            Opacity="0.3"/>
                                                </Button.Shadow>
                                            </Button>
                                        </Grid>
                                    </StackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </Grid>

        <!-- Enhanced Shopping Cart (Right Side) -->
        <Border Grid.Row="1" Grid.Column="1"
                StrokeThickness="0"
                BackgroundColor="{DynamicResource SidebarBackgroundColor}"
                Padding="20">
            <Border.Shadow>
                <Shadow Brush="{DynamicResource ShadowColor}" 
                        Offset="-4,0" 
                        Radius="20" 
                        Opacity="0.1"/>
            </Border.Shadow>

            <Grid RowDefinitions="Auto,*,Auto" RowSpacing="15">

                <!-- Cart Header -->
                <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
                    <Label Grid.Column="0" 
                           Text="🛒" 
                           FontSize="24" 
                           VerticalOptions="Center"/>
                    <StackLayout Grid.Column="1" Spacing="2" Margin="10,0,0,0">
                        <Label Text="Shopping Cart" 
                               FontSize="20"
                               FontAttributes="Bold" 
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Label Text="{Binding CartItems.Count, StringFormat='{0} items'}"
                               FontSize="12"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                    </StackLayout>
                </Grid>

                <!-- Cart Items List -->
                <ScrollView Grid.Row="1">
                    <CollectionView ItemsSource="{Binding CartItems}"
                                    SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
                                       Stroke="{DynamicResource BorderColor}"
                                       StrokeThickness="1"
                                       StrokeShape="RoundRectangle 12"
                                       Padding="15">
                                    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">

                                        <!-- Item Name & Remove Button -->
                                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                            <Label Grid.Column="0"
                                                   Text="{Binding ItemName}"
                                                   FontSize="15"
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource PrimaryTextColor}"/>

                                            <Button Grid.Column="1"
                                                    Text="🗑"
                                                    FontSize="14"
                                                    BackgroundColor="{DynamicResource DangerColor}"
                                                    TextColor="White"
                                                    CornerRadius="8"
                                                    WidthRequest="36"
                                                    HeightRequest="36"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveFromCartCommand}"
                                                    CommandParameter="{Binding .}"/>
                                        </Grid>

                                        <!-- Unit Price -->
                                        <Label Grid.Row="1"
                                               Text="{Binding UnitPrice, StringFormat='Rp {0:N0} per item'}"
                                               FontSize="12"
                                               TextColor="{DynamicResource SecondaryTextColor}"/>

                                        <!-- Quantity Controls & Total -->
                                        <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">

                                            <!-- Quantity Controls -->
                                            <Border Grid.Column="0"
                                                   StrokeThickness="1"
                                                   Stroke="{DynamicResource BorderColor}"
                                                   StrokeShape="RoundRectangle 8"
                                                   BackgroundColor="{DynamicResource PageBackgroundColor}">
                                                <HorizontalStackLayout Spacing="0">
                                                    <Button Text="-"
                                                            BackgroundColor="Transparent"
                                                            TextColor="{DynamicResource DangerColor}"
                                                            CornerRadius="8"
                                                            WidthRequest="36"
                                                            HeightRequest="36"
                                                            FontSize="18"
                                                            FontAttributes="Bold"
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DecreaseQuantityCommand}"
                                                            CommandParameter="{Binding .}"/>

                                                    <BoxView WidthRequest="1" 
                                                            BackgroundColor="{DynamicResource BorderColor}"/>

                                                    <Label Text="{Binding Quantity}"
                                                           WidthRequest="40"
                                                           FontSize="15"
                                                           FontAttributes="Bold"
                                                           TextColor="{DynamicResource PrimaryTextColor}"
                                                           HorizontalTextAlignment="Center"
                                                           VerticalTextAlignment="Center"/>

                                                    <BoxView WidthRequest="1" 
                                                            BackgroundColor="{DynamicResource BorderColor}"/>

                                                    <Button Text="+"
                                                            BackgroundColor="Transparent"
                                                            TextColor="{DynamicResource SuccessColor}"
                                                            CornerRadius="8"
                                                            WidthRequest="36"
                                                            HeightRequest="36"
                                                            FontSize="18"
                                                            FontAttributes="Bold"
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IncreaseQuantityCommand}"
                                                            CommandParameter="{Binding .}"/>
                                                </HorizontalStackLayout>
                                            </Border>

                                            <!-- Total Amount -->
                                            <Label Grid.Column="2"
                                                   Text="{Binding TotalAmount, StringFormat='Rp {0:N0}'}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource SuccessColor}"
                                                   HorizontalOptions="End"
                                                   VerticalOptions="Center"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                        <!-- Empty Cart Message -->
                        <CollectionView.EmptyView>
                            <StackLayout Padding="20" 
                                        HorizontalOptions="Center" 
                                        VerticalOptions="Center"
                                        Spacing="15">
                                <Label Text="🛒" 
                                       FontSize="60" 
                                       HorizontalOptions="Center"
                                       Opacity="0.3"/>
                                <Label Text="Your cart is empty" 
                                       FontSize="16" 
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       HorizontalOptions="Center"/>
                                <Label Text="Add some delicious items!" 
                                       FontSize="14" 
                                       TextColor="{DynamicResource TertiaryTextColor}"
                                       HorizontalOptions="Center"/>
                            </StackLayout>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </ScrollView>

                <!-- Cart Summary & Checkout -->
                <Border Grid.Row="2"
                       StrokeThickness="0"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       StrokeShape="RoundRectangle 12"
                       Padding="15">
                    <Border.Shadow>
                        <Shadow Brush="{DynamicResource ShadowColor}" 
                                Offset="0,4" 
                                Radius="12" 
                                Opacity="0.15"/>
                    </Border.Shadow>

                    <StackLayout Spacing="12">

                        <!-- Subtotal -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0" 
                                   Text="Subtotal:" 
                                   FontSize="14" 
                                   TextColor="{DynamicResource SecondaryTextColor}"/>
                            <Label Grid.Column="1"
                                   Text="{Binding CartSubtotal, StringFormat='Rp {0:N0}'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                        </Grid>

                        <!-- Tax -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0" 
                                   Text="Tax (10%):" 
                                   FontSize="14" 
                                   TextColor="{DynamicResource SecondaryTextColor}"/>
                            <Label Grid.Column="1"
                                   Text="{Binding CartTax, StringFormat='Rp {0:N0}'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource AccentColor}"/>
                        </Grid>

                        <!-- Divider -->
                        <BoxView HeightRequest="1" 
                                BackgroundColor="{DynamicResource DividerColor}"/>

                        <!-- Total -->
                        <Grid ColumnDefinitions="*,Auto" Margin="0,5">
                            <Label Grid.Column="0"
                                   Text="TOTAL:"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Grid.Column="1"
                                   Text="{Binding CartTotal, StringFormat='Rp {0:N0}'}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource SuccessColor}"/>
                        </Grid>

                        <!-- Buttons -->
                        <Button Text="Clear Cart"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource SecondaryTextColor}"
                                BorderColor="{DynamicResource BorderColor}"
                                BorderWidth="1"
                                CornerRadius="10"
                                Padding="0,12"
                                Command="{Binding ClearCartCommand}"/>

                        <Button Text="🔒 Proceed to Payment"
                                BackgroundColor="{DynamicResource SuccessColor}"
                                TextColor="White"
                                CornerRadius="10"
                                FontAttributes="Bold"
                                FontSize="16"
                                Padding="0,15"
                                Command="{Binding CheckoutCommand}">
                            <Button.Shadow>
                                <Shadow Brush="{DynamicResource SuccessColor}" 
                                        Offset="0,4" 
                                        Radius="12" 
                                        Opacity="0.4"/>
                            </Button.Shadow>
                        </Button>
                    </StackLayout>
                </Border>
            </Grid>
        </Border>
    </Grid>
</ContentPage>