<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Cashere.PageModels"             
             xmlns:models="clr-namespace:Cashere.Models"
             xmlns:controls="clr-namespace:Cashere.Pages.Controls"
             xmlns:pullToRefresh="clr-namespace:Syncfusion.Maui.Toolkit.PullToRefresh;assembly=Syncfusion.Maui.Toolkit"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Cashere.Pages.MainPage"
             x:Name="OverviewPage"
             Background="#F5F5F5"
             Title="{Binding Today}">

    <Grid RowDefinitions="50,*" ColumnDefinitions="*,400">

        <!-- Header -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
              BackgroundColor="#2C3E50" Padding="15">
            <Label Text="☕ Cashere" 
                   FontSize="24" FontAttributes="Bold" 
                   TextColor="White" VerticalOptions="Center"/>
        </Grid>

        <!-- Menu Categories & Items (Left Side) -->
        <Grid Grid.Row="1" Grid.Column="0" Padding="10" RowDefinitions="50,*">

            <!-- Category Tabs -->
            <CollectionView Grid.Row="0" ItemsSource="{Binding Categories}" 
                            SelectionMode="Single" 
                            SelectionChangedCommand="{Binding SelectMenuItemCommand}"
                            SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="5"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#3498DB" CornerRadius="20" 
                               Padding="15,8" HasShadow="False"
                               BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, 
                                              ConverterParameter='#3498DB|#FFFFFF'}">
                            <Label Text="{Binding Name}" FontSize="14" FontAttributes="Bold"
                                   TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter},
                                              ConverterParameter='#FFFFFF|#333333'}"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Menu Items Grid -->
            <CollectionView Grid.Row="1" ItemsSource="{Binding FilteredMenuItems}" 
                          SelectionMode="Single" SelectionChanged="OnMenuItemSelected">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" HorizontalItemSpacing="10" 
                                    VerticalItemSpacing="10" Grid.Column="3"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10" Spacing="5">
                            <Frame CornerRadius="10" HasShadow="True" 
                                   BorderColor="#CCCCCC" Padding="0">
                                <StackLayout Padding="15" Spacing="8">
                                    <!-- Item Icon/Badge -->
                                    <Frame CornerRadius="5" BackgroundColor="#3498DB" 
                                           Padding="5" HasShadow="False" HorizontalOptions="Start">
                                        <Label Text="{Binding Category}" FontSize="10" 
                                               FontAttributes="Bold" TextColor="White"/>
                                    </Frame>

                                    <!-- Item Name -->
                                    <Label Text="{Binding Name}" FontSize="14" 
                                           FontAttributes="Bold" LineBreakMode="TailTruncation"/>

                                    <!-- Item Description -->
                                    <Label Text="{Binding Description}" FontSize="11" 
                                           TextColor="#666666" LineBreakMode="TailTruncation"/>

                                    <!-- Price -->
                                    <Label Text="{Binding Price, StringFormat='Rp {0:N0}'}" 
                                           FontSize="16" FontAttributes="Bold" 
                                           TextColor="#27AE60"/>

                                    <!-- Add Button -->
                                    <Button Text="+ Add to Cart" BackgroundColor="#3498DB" 
                                            TextColor="White" CornerRadius="5" Padding="5"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                      Path=BindingContext.AddToCartCommand}"
                                            CommandParameter="{Binding .}"/>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- Shopping Cart (Right Side) -->
        <Border Grid.Row="1"
        Grid.Column="1"
        Stroke="#CCCCCC"
        StrokeThickness="1"
        BackgroundColor="White"
        Padding="15">

            <Grid RowDefinitions="40,*,200">

                <!-- Cart Header -->
                <Label Grid.Row="0"
               Text="🛒 Shopping Cart"
               FontSize="18"
               FontAttributes="Bold"
               VerticalOptions="Center" />

                <!-- Cart Items List -->
                <CollectionView Grid.Row="1"
                        ItemsSource="{Binding CartItems}"
                        Margin="0,10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#EEEEEE"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 5"
                            Margin="0,5">
                                <StackLayout Padding="10" Spacing="5">

                                    <!-- Item Header Row -->
                                    <Grid ColumnDefinitions="*,50,40" ColumnSpacing="5">

                                        <!-- Item Name -->
                                        <StackLayout Grid.Column="0">
                                            <Label Text="{Binding ItemName}"
                                           FontSize="13"
                                           FontAttributes="Bold" />
                                            <Label Text="{Binding UnitPrice, StringFormat='Rp {0:N0}'}"
                                           FontSize="11"
                                           TextColor="#666666" />
                                        </StackLayout>

                                        <!-- Quantity Controls -->
                                        <StackLayout Grid.Column="1"
                                             Orientation="Horizontal"
                                             Spacing="5">
                                            <Button Text="-"
                                            BackgroundColor="#E74C3C"
                                            TextColor="White"
                                            CornerRadius="3"
                                            Padding="3"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                              Path=BindingContext.DecreaseQuantityCommand}"
                                            CommandParameter="{Binding .}"
                                            FontSize="12" />
                                            <Entry Text="{Binding Quantity}"
                                           Keyboard="Numeric"
                                           TextChanged="OnCartItemQuantityChanged"
                                           HorizontalTextAlignment="Center"
                                           FontSize="12" />
                                            <Button Text="+"
                                            BackgroundColor="#27AE60"
                                            TextColor="White"
                                            CornerRadius="3"
                                            Padding="3"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                              Path=BindingContext.IncreaseQuantityCommand}"
                                            CommandParameter="{Binding .}"
                                            FontSize="12" />
                                        </StackLayout>

                                        <!-- Remove Button -->
                                        <Button Grid.Column="2"
                                        Text="🗑"
                                        BackgroundColor="#C0392B"
                                        TextColor="White"
                                        CornerRadius="3"
                                        Padding="3"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                                                          Path=BindingContext.RemoveFromCartCommand}"
                                        CommandParameter="{Binding .}"
                                        FontSize="14" />
                                    </Grid>

                                    <!-- Item Total -->
                                    <Label Text="{Binding TotalAmount, StringFormat='Total: Rp {0:N0}'}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="#27AE60" />
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Cart Summary & Checkout -->
                <Border Grid.Row="2"
                Stroke="#CCCCCC"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 5"
                Padding="10"
                Margin="0,10,0,0">
                    <StackLayout Spacing="10">

                        <!-- Subtotal -->
                        <Grid ColumnDefinitions="*,150" Padding="10,5">
                            <Label Grid.Column="0" Text="Subtotal:" FontSize="12" />
                            <Label Grid.Column="1"
                           Text="{Binding CartSubtotal, StringFormat='Rp {0:N0}'}"
                           FontSize="12"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="End" />
                        </Grid>

                        <!-- Tax -->
                        <Grid ColumnDefinitions="*,150" Padding="10,5">
                            <Label Grid.Column="0" Text="Tax (10%):" FontSize="12" />
                            <Label Grid.Column="1"
                           Text="{Binding CartTax, StringFormat='Rp {0:N0}'}"
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="#E67E22"
                           HorizontalTextAlignment="End" />
                        </Grid>

                        <!-- Total -->
                        <Border Stroke="#E0E0E0"
                        StrokeThickness="1"
                        BackgroundColor="#F0F0F0"
                        StrokeShape="RoundRectangle 5"
                        Padding="10,5">
                            <Grid ColumnDefinitions="*,150">
                                <Label Grid.Column="0"
                               Text="TOTAL:"
                               FontSize="14"
                               FontAttributes="Bold" />
                                <Label Grid.Column="1"
                               Text="{Binding CartTotal, StringFormat='Rp {0:N0}'}"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#27AE60"
                               HorizontalTextAlignment="End" />
                            </Grid>
                        </Border>

                        <!-- Buttons -->
                        <Button Text="Clear Cart"
                        BackgroundColor="#95A5A6"
                        TextColor="White"
                        CornerRadius="5"
                        Command="{Binding ClearCartCommand}" />

                        <Button Text="🔒 Proceed to Payment"
                        BackgroundColor="#27AE60"
                        TextColor="White"
                        CornerRadius="5"
                        FontAttributes="Bold"
                        FontSize="14"
                        Padding="5,10"
                        Command="{Binding CheckoutCommand}" />
                    </StackLayout>
                </Border>

            </Grid>
        </Border>

    </Grid>
</ContentPage>

