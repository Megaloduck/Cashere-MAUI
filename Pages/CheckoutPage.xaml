<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cashere.Pages.CheckoutPage"
             Title="CheckoutPage"  
             BackgroundColor="#F5F5F5">

    <Grid Padding="20" RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,*">

        <!-- Header -->
        <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Spacing="10" Margin="0,0,0,20">
            <Label Text="ðŸ’³ Checkout" FontSize="24" FontAttributes="Bold"/>
            <Label Text="{Binding OrderNumber, StringFormat='Order: {0}'}" FontSize="14" TextColor="#666666"/>
        </StackLayout>

        <!-- Order Summary (Left) -->
        <Frame Grid.Row="1" Grid.Column="0" Margin="0,0,10,0" Padding="15" 
               CornerRadius="10" BackgroundColor="White">
            <StackLayout Spacing="15">
                <Label Text="Order Summary" FontSize="16" FontAttributes="Bold"/>

                <!-- Cart Items -->
                <CollectionView ItemsSource="{Binding CartItems}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*,Auto" Padding="5">
                                <StackLayout Grid.Column="0">
                                    <Label Text="{Binding ItemName}" FontSize="12" FontAttributes="Bold"/>
                                    <Label Text="{Binding UnitPrice, StringFormat='Rp {0:N0} x {1}'}" 
                                           FontSize="10" TextColor="#666666"/>
                                </StackLayout>
                                <Label Grid.Column="1" Text="{Binding TotalAmount, StringFormat='Rp {0:N0}'}" 
                                       FontSize="12" FontAttributes="Bold" TextColor="#27AE60"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Totals -->
                <BoxView HeightRequest="1" BackgroundColor="#CCCCCC"/>
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0" Text="Subtotal:" FontSize="12"/>
                    <Label Grid.Column="1" Text="{Binding Subtotal, StringFormat='Rp {0:N0}'}" FontSize="12"/>
                </Grid>
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0" Text="Tax (10%):" FontSize="12"/>
                    <Label Grid.Column="1" Text="{Binding Tax, StringFormat='Rp {0:N0}'}" FontSize="12" TextColor="#E67E22"/>
                </Grid>
                <Grid ColumnDefinitions="*,Auto" BackgroundColor="#F0F0F0" Padding="10" >
                    <Label Grid.Column="0" Text="TOTAL:" FontSize="14" FontAttributes="Bold"/>
                    <Label Grid.Column="1" Text="{Binding Total, StringFormat='Rp {0:N0}'}" 
                           FontSize="14" FontAttributes="Bold" TextColor="#27AE60"/>
                </Grid>
            </StackLayout>
        </Frame>

        <!-- Payment Method (Right) -->
        <Frame Grid.Row="1" Grid.Column="1" Margin="10,0,0,0" Padding="15" 
               CornerRadius="10" BackgroundColor="White">
            <StackLayout Spacing="15">
                <Label Text="Payment Method" FontSize="16" FontAttributes="Bold"/>

                <!-- Cash Payment -->
                <Frame BorderColor="#3498DB" Padding="15" CornerRadius="5" HasShadow="False"
                       BackgroundColor="{Binding IsCashSelected, Converter={StaticResource BoolToColorConverter},
                                        ConverterParameter='#E3F2FD|White'}">
                    <StackLayout Spacing="10">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                            <RadioButton Grid.Column="0" IsChecked="{Binding IsCashSelected}" 
                                       GroupName="PaymentMethod"/>
                            <Label Grid.Column="1" Text="ðŸ’µ Cash" FontSize="14" FontAttributes="Bold" 
                                   VerticalOptions="Center"/>
                        </Grid>

                        <!-- Cash Amount Input -->
                        <StackLayout IsVisible="{Binding IsCashSelected}" Spacing="5">
                            <Label Text="Amount Paid:" FontSize="12"/>
                            <Entry Text="{Binding CashAmountPaid}" Placeholder="Enter amount" 
                                   Keyboard="Numeric" FontSize="14"/>
                            <Label Text="{Binding Change, StringFormat='Change: Rp {0:N0}'}" 
                                   FontSize="12" FontAttributes="Bold" TextColor="#27AE60"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- QRIS Payment -->
                <Frame BorderColor="#3498DB" Padding="15" CornerRadius="5" HasShadow="False"
                       BackgroundColor="{Binding IsQRISSelected, Converter={StaticResource BoolToColorConverter},
                                        ConverterParameter='#E3F2FD|White'}">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <RadioButton Grid.Column="0" IsChecked="{Binding IsQRISSelected}" 
                                   GroupName="PaymentMethod"/>
                        <Label Grid.Column="1" Text="ðŸ“± QRIS" FontSize="14" FontAttributes="Bold" 
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>
            </StackLayout>
        </Frame>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,20,0,0" 
              ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Grid.Column="0" Text="Cancel" BackgroundColor="#95A5A6" 
                    TextColor="White" CornerRadius="5" Padding="10"
                    Command="{Binding CancelCommand}"/>
            <Button Grid.Column="1" Text="âœ“ Process Payment" BackgroundColor="#27AE60" 
                    TextColor="White" CornerRadius="5" Padding="10" FontAttributes="Bold"
                    Command="{Binding ProcessPaymentCommand}"/>
        </Grid>
    </Grid>
</ContentPage>