<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cashere.Pages.CheckoutPage"
                xmlns:models="clr-namespace:Cashere.Models"
              BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto,*" Padding="20" RowSpacing="20">

        <!-- Header -->
        <Border Grid.Row="0"
                BackgroundColor="{DynamicResource HeaderBackgroundColor}"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 15"
                Padding="20">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Label Grid.Column="0" 
                       Text="ðŸ”’" 
                       FontSize="28" 
                       VerticalOptions="Center"/>
                <StackLayout Grid.Column="1" Spacing="2" Margin="15,0,0,0">
                    <Label Text="Checkout" 
                           FontSize="24"
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <Label Text="{Binding OrderNumber, StringFormat='Order #{0}'}"
                           FontSize="14"
                           TextColor="#CCCCCC"/>
                </StackLayout>
                <Button Grid.Column="2"
                        Text="Cancel Order" 
                        BackgroundColor="Transparent"
                        TextColor="{DynamicResource DangerColor}"
                        BorderColor="{DynamicResource DangerColor}"
                        BorderWidth="2"
                        CornerRadius="20"
                        Padding="20,8" FontSize="14"
                        Command="{Binding CancelCommand}"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,400" ColumnSpacing="20">

            <!-- Left: Order Summary -->
            <Border Grid.Column="0" 
                    BackgroundColor="{DynamicResource CardBackgroundColor}"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 15"
                    Padding="20">
                <Border.Shadow>
                    <Shadow Brush="{DynamicResource ShadowColor}" 
                            Offset="0,4" 
                            Radius="12" 
                            Opacity="0.15"/>
                </Border.Shadow>

                <Grid RowDefinitions="Auto,*,Auto" RowSpacing="15">

                    <!-- Title -->
                    <Label Grid.Row="0" 
                           Text="ðŸ“‹ Order Summary" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>

                    <!-- Cart Items -->
                    <ScrollView Grid.Row="1">
                        <CollectionView ItemsSource="{Binding CartItems}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" VerticalItemSpacing="5"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,12"
                                           BackgroundColor="{DynamicResource PageBackgroundColor}"
                                           StrokeThickness="0"
                                           StrokeShape="RoundRectangle 10"
                                           Padding="15">
                                        <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                                <Label Grid.Column="0"
                                                       Text="{Binding ItemName}" 
                                                       FontSize="15" 
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                                <Label Grid.Column="1" 
                                                       VerticalTextAlignment="Center"
                                                       Text="{Binding SubtotalAmount, StringFormat='Rp {0:N0}'}" 
                                                       FontSize="15" 
                                                       FontAttributes="Bold" 
                                                       TextColor="{DynamicResource SuccessColor}"/>
                                            </Grid>

                                            <Label Grid.Row="1" 
                                                   FontSize="13" 
                                                   TextColor="{DynamicResource SecondaryTextColor}">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Quantity}"/>
                                                        <Span Text=" Ã— Rp "/>
                                                        <Span Text="{Binding UnitPrice, StringFormat='{0:N0}'}"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>

                    <!-- Totals -->
                    <StackLayout Grid.Row="2" Spacing="12">
                        <BoxView HeightRequest="1" BackgroundColor="{DynamicResource DividerColor}"/>

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0" 
                                   Text="Subtotal:" 
                                   FontSize="14"
                                   TextColor="{DynamicResource SecondaryTextColor}"/>
                            <Label Grid.Column="1" 
                                   Text="{Binding Subtotal, StringFormat='Rp {0:N0}'}" 
                                   FontSize="14" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                        </Grid>

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0" 
                                   Text="Tax (10%):" 
                                   FontSize="14"
                                   TextColor="{DynamicResource SecondaryTextColor}"/>
                            <Label Grid.Column="1" 
                                   Text="{Binding Tax, StringFormat='Rp {0:N0}'}" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   TextColor="{DynamicResource AccentColor}"/>
                        </Grid>

                        <Border BackgroundColor="{DynamicResource SuccessColor}"
                               StrokeThickness="0"
                               StrokeShape="RoundRectangle 10"
                               Padding="15,10">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" 
                                       Text="TOTAL:" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="White"/>
                                <Label Grid.Column="1" 
                                       Text="{Binding Total, StringFormat='Rp {0:N0}'}" 
                                       FontSize="20" 
                                       FontAttributes="Bold" 
                                       TextColor="White"/>
                            </Grid>
                        </Border>

                        <Button Text="ðŸ–¨ï¸ Preview Receipt" 
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource SecondaryTextColor}"
                                BorderColor="{DynamicResource BorderColor}"
                                BorderWidth="1"
                                CornerRadius="10"
                                Command="{Binding PreviewReceiptCommand}"/>
                    </StackLayout>
                </Grid>
            </Border>

            <!-- Right: Payment Method -->
            <Border Grid.Column="1"
                    BackgroundColor="{DynamicResource CardBackgroundColor}"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 15"
                    Padding="20">
                <Border.Shadow>
                    <Shadow Brush="{DynamicResource ShadowColor}" 
                            Offset="0,4" 
                            Radius="12" 
                            Opacity="0.15"/>
                </Border.Shadow>

                <ScrollView VerticalScrollBarVisibility="Never">
                    <StackLayout Spacing="20">

                        <!-- Payment Method Title -->
                        <Label Text="ðŸ’³ Payment Method" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        
                        <!-- Cash RadioButton -->
                        <RadioButton Content="Cash"
                                     IsChecked="{Binding IsCashSelected}"
                                     GroupName="PaymentMethod">
                            <RadioButton.ControlTemplate>
                                <ControlTemplate>
                                    <Border StrokeThickness="2"
                                            Stroke="{Binding IsCashSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Dynamic:PrimaryColor|Dynamic:BorderColor'}"
                                            StrokeShape="RoundRectangle 12"
                                            BackgroundColor="{Binding IsCashSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#E3F2FD|Transparent'}"
                                            Shadow="{Binding IsCashSelected, Converter={StaticResource BoolToShadowConverter}}"
                                            Padding="20">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <Label Grid.Column="0" 
                                                   Text="ðŸ’µ" 
                                                   FontSize="32"/>
                                            <StackLayout Grid.Column="1" Margin="15,0" VerticalOptions="Center">
                                                <Label Text="Cash"                                                        
                                                       FontSize="18" 
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                                <Label Text="Pay with cash" 
                                                       FontSize="13"
                                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                            </StackLayout>
                                            <Label Grid.Column="2" 
                                                   Text="{Binding IsCashSelected, Converter={StaticResource BoolToCheckConverter}}"
                                                   FontSize="24"
                                                   TextColor="{DynamicResource PrimaryColor}"
                                                   VerticalOptions="Center"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </RadioButton.ControlTemplate>
                        </RadioButton>

                        <!-- QRIS RadioButton -->
                        <RadioButton Content="QRIS"
                                     IsChecked="{Binding IsQRISSelected}"
                                     GroupName="PaymentMethod">
                            <RadioButton.ControlTemplate>
                                <ControlTemplate>
                                    <Border StrokeThickness="2"
                                            Stroke="{Binding IsQRISSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Dynamic:PrimaryColor|Dynamic:BorderColor'}"
                                            StrokeShape="RoundRectangle 12"
                                            BackgroundColor="{Binding IsQRISSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#E3F2FD|Transparent'}"
                                            Shadow="{Binding IsQRISSelected, Converter={StaticResource BoolToShadowConverter}}"
                                            Padding="20">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <Label Grid.Column="0" 
                                                   Text="ðŸ“±" 
                                                   FontSize="32"/>
                                            <StackLayout Grid.Column="1" Margin="15,0" VerticalOptions="Center">
                                                <Label Text="QRIS" 
                                                       FontSize="18" 
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                                <Label Text="Scan to pay" 
                                                       FontSize="13"
                                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                            </StackLayout>
                                            <Label Grid.Column="2" 
                                                   Text="{Binding IsQRISSelected, Converter={StaticResource BoolToCheckConverter}}"
                                                   FontSize="24"
                                                   TextColor="{DynamicResource PrimaryColor}"
                                                   VerticalOptions="Center"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </RadioButton.ControlTemplate>
                        </RadioButton>

                        <!-- Waiting Notification -->
                        <Label Text="â³ Waiting for payment confirmation..."
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0"
                               IsVisible="{Binding IsQRISSelected}" />
                        
                        <!-- Cash Payment Details -->
                        <StackLayout IsVisible="{Binding IsCashSelected}" Spacing="15">
                            <Label Text="Cash Amount" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>

                            <Border BackgroundColor="{DynamicResource PageBackgroundColor}"
                                   StrokeThickness="1"
                                   Stroke="{DynamicResource BorderColor}"
                                   StrokeShape="RoundRectangle 10"
                                   Padding="15">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Label Grid.Column="0" 
                                           Text="Rp" 
                                           FontSize="20" 
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           VerticalOptions="Center"
                                           Margin="0,0,10,0"/>
                                    <Entry Grid.Column="1"
                                           Text="{Binding CashAmountPaid}"
                                           Keyboard="Numeric"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           BackgroundColor="Transparent"
                                           HorizontalTextAlignment="End"/>
                                </Grid>
                            </Border>

                            <!-- Quick Amount Buttons -->
                            <Label Text="Quick Amount" 
                                   FontSize="14"
                                   TextColor="{DynamicResource SecondaryTextColor}"/>

                            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                                <Button Grid.Column="0"
                                        Text="Exact"
                                        BackgroundColor="{DynamicResource PrimaryColor}"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Command="{Binding SetExactAmountCommand}"/>
                                <Button Grid.Column="1"
                                        Text="+50k"
                                        BackgroundColor="{DynamicResource SecondaryColor}"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Command="{Binding AddQuickAmountCommand}"
                                        CommandParameter="50000"/>
                                <Button Grid.Column="2"
                                        Text="+100k"
                                        BackgroundColor="{DynamicResource SecondaryColor}"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Command="{Binding AddQuickAmountCommand}"
                                        CommandParameter="100000"/>
                            </Grid>

                            <!-- Change Display -->
                            <Border IsVisible="{Binding ShowChange}"
                                   BackgroundColor="#E8F5E9"
                                   StrokeThickness="0"
                                   StrokeShape="RoundRectangle 10"
                                   Padding="15">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0" 
                                           Text="Change:" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="#2E7D32"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding Change, StringFormat='Rp {0:N0}'}" 
                                           FontSize="20" 
                                           FontAttributes="Bold"
                                           TextColor="#2E7D32"/>
                                </Grid>
                            </Border>

                            <!-- Insufficient Warning -->
                            <Border IsVisible="{Binding ShowInsufficientWarning}"
                                   BackgroundColor="#FFEBEE"
                                   StrokeThickness="0"
                                   StrokeShape="RoundRectangle 10"
                                   Padding="15">
                                <Label Text="âš ï¸ Insufficient amount"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#C62828"
                                       HorizontalOptions="Center"/>
                            </Border>
                        </StackLayout>

                        <!-- Action Buttons -->
                        <StackLayout Spacing="12" Margin="0,20,0,0">
                            <Button Text="ðŸ’° Process Payment"
                                    BackgroundColor="{DynamicResource SuccessColor}"
                                    TextColor="White"
                                    FontSize="18"
                                    FontAttributes="Bold"
                                    CornerRadius="12"
                                    Padding="0,15"
                                    Command="{Binding ProcessPaymentCommand}"
                                    IsEnabled="{Binding CanProcessPayment}">
                                <Button.Shadow>
                                    <Shadow Brush="{DynamicResource SuccessColor}" 
                                            Offset="0,4" 
                                            Radius="12" 
                                            Opacity="0.4"/>
                                </Button.Shadow>
                            </Button>

                        
                        </StackLayout>

                    </StackLayout>
                </ScrollView>
            </Border>

        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2"
              IsVisible="{Binding IsLoading}"
              BackgroundColor="#80000000">
            <Border WidthRequest="120"
                   HeightRequest="120"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   StrokeThickness="0"
                   StrokeShape="RoundRectangle 20">
                <StackLayout Spacing="15" 
                            HorizontalOptions="Center" 
                            VerticalOptions="Center">
                    <ActivityIndicator IsRunning="True"
                                     Color="{DynamicResource PrimaryColor}"
                                     WidthRequest="40"
                                     HeightRequest="40"/>
                    <Label Text="Processing..."
                           FontSize="14"
                           TextColor="{DynamicResource PrimaryTextColor}"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Border>
        </Grid>

    </Grid>
</ContentPage>